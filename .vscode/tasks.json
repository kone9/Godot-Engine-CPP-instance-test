{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "SCONS Contruir Los Modulos De Godot DEBUG WINDOWS configuracion Ariel",
			"options": {
				"cwd": "${workspaceFolder}/godot-cpp"
			},
			"command": "scons",
			"problemMatcher": "$msCompile",
			"group": "build",
			"args": [
				"platform=windows",
				"verbose=yes",
				"bits=64",
				"target=debug",
				"tools=yes",
				"generate_bindings=yes",
				"-j",
				"4"
			]
		},
		{
			"type": "shell",
			"label": "SCONS Contruir Los Modulos De Godot RELEASE WINDOWS configuracion Ariel",
			"options": {
				"cwd": "${workspaceFolder}/godot-cpp"
			},
			"command": "scons",
			"problemMatcher": "$msCompile",
			"group": "build",
			"args": [
				"platform=windows",
				"verbose=yes",
				"bits=64",
				"target=release",
				"tools=yes",
				"generate_bindings=yes",
				"-j",
				"4"
			]
		},
		{
			"type": "shell",
			"label": "SCONS COMPILAR RAPIDO DEBUG WINDOWS Los Modulos CPP Godot",
			"options": {
				"cwd": "${workspaceFolder}/godot-cpp"
			},
			"command": "scons",
			"problemMatcher": "$msCompile",
			"group": "build",
			"args": [
				"platform=windows"
			]
		}
	]
}